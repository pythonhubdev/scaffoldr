FROM ghcr.io/astral-sh/uv:python3.13-bookworm AS base
WORKDIR /app

ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy

RUN apt-get update && apt-get install -y --no-install-recommends \
	build-essential \
	libgl1-mesa-glx \
	&& rm -rf /var/lib/apt/lists/*

COPY pyproject.toml uv.lock README.md ./

FROM base AS development

ENV PATH="/app/.venv/bin:$PATH"

COPY src/ ./src/

RUN --mount=type=cache,id=uv-cache-dev,target=/root/.cache/uv uv sync --locked

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app/src

EXPOSE 8000

CMD ["uv", "run", "{{project_slug}}"]

FROM base AS production

ENV PATH="/app/.venv/bin:$PATH"

COPY src/ ./src/

RUN --mount=type=cache,id=uv-cache-prod,target=/root/.cache/uv uv sync --locked --no-editable

EXPOSE 8000

CMD ["uv", "run", "{{project_slug}}", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]
